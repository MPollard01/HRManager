@model CreatePayrollVM

<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 800px">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-black" id="formModalLabel">Create New Pay Slip</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group mb-3 col-6">
                            <label asp-for="EmployeeId" class="control-label"></label>
                            <select asp-for="EmployeeId" asp-items="Model.Employees" class="form-select">
                                <option>Select Employee</option>
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3 col-6">
                            <label asp-for="Year" class="control-label"></label>
                            <select id="yearSelect" asp-items="Model.Year" class="form-select">
                                <option>Select Year</option>
                            </select>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group mb-3 col-6">
                            <label class="control-label">Pay Period Ends</label>
                            <select asp-for="PayPeriod" id="periodSelect" class="form-select">
                                <option>Select Period</option>
                            </select>
                            <span asp-validation-for="PayPeriod" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input form="form" type="submit" class="btn btn-info" value="Submit" />
            </div>
        </div>
    </div>
</div>