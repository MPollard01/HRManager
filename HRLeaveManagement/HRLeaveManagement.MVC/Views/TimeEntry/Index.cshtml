@model TimeEntryVM

<div class="row">
    <div class="col-md-7">
        <h1>Time Entry</h1>
    </div>
    <div class="col-md-4">
        <a class="btn btn-success mt-4" asp-action="Create">Submit</a>
    </div>

</div>

<br />
<br />

<div class="container">
    <div class="row">
        <div class='col-sm-4'>
            <div class="form-group d-flex gap-2">
                <a asp-action="Index" asp-route-date="@Model.EndWeek.AddDays(-7)" class="btn btn-info"><i class="bi bi-arrow-left"></i></a>
                <div class="input-group date" id="datepicker">
                    <input type="text" class="form-control" value="@Model.EndWeek.ToShortDateString()"/>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <a asp-action="Index" asp-route-date="@Model.EndWeek.AddDays(7)" class="btn btn-info"><i class="bi bi-arrow-right"></i></a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Model.StartWeek.ToString("ddd/dd")</th>
                <th>@Model.StartWeek.AddDays(1).ToString("ddd/dd")</th>
                <th>@Model.StartWeek.AddDays(2).ToString("ddd/dd")</th>
                <th>@Model.StartWeek.AddDays(3).ToString("ddd/dd")</th>
                <th>@Model.StartWeek.AddDays(4).ToString("ddd/dd")</th>
                <th>@Model.StartWeek.AddDays(5).ToString("ddd/dd")</th>
                <th>@Model.EndWeek.ToString("ddd/dd")</th>
            </tr>
        </thead>
        <tbody>
             <tr>
                 if(@Model.Hours.Count > 0)
                 {
                    <td>@Model.Hours[0]</td>
                    <td>@Model.Hours[1]</td>
                    <td>@Model.Hours[2]</td>
                    <td>@Model.Hours[3]</td>
                    <td>@Model.Hours[4]</td>
                    <td>@Model.Hours[5]</td>
                    <td>@Model.Hours[6]</td>
                 }
                 else
                 {
                     <td><input type="number" class="form-control" /></td>
                     <td><input type="number" class="form-control" /></td>
                     <td><input type="number" class="form-control" /></td>
                     <td><input type="number" class="form-control" /></td>
                     <td><input type="number" class="form-control" /></td>
                     <td><input type="number" class="form-control" /></td>
                     <td><input type="number" class="form-control" /></td>
                 }
             </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#datepicker').datepicker({
                format: 'dd/mm/yyyy',
                startDate: '01/01/2022',
                endDate: '01/01/2023'
            });
        });
    </script>
}